<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="mainViewModel"
            type="tw.nolions.coffeebeanslife.viewModel.MainViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/bean_import_ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:alpha="0.6"
            android:focusable="true"
            android:onClick="@{() -> mainViewModel.onClickBeanImportActionButton()}"
            android:visibility="@{mainViewModel.isImport ? View.VISIBLE : View.GONE}"
            app:fabSize="mini"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/import_64x64" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/bean_export_ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:alpha="0.6"
            android:focusable="true"
            android:onClick="@{() -> mainViewModel.onClickBeanImportActionButton()}"
            android:visibility="@{mainViewModel.isImport ? View.GONE : View.VISIBLE}"
            app:fabSize="mini"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/export_64x64" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/BoomOnefloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="120dp"
            android:alpha="0.5"
            android:clickable="@{mainViewModel.isImport? true : false}"
            android:visibility="@{mainViewModel.isImport ? View.VISIBLE: View.GONE }"
            android:focusable="true"
            android:onClick="@{() -> mainViewModel.onClickOneBoom()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/fire64x64"
            app:fabSize="mini"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/BoonTwofloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="56dp"
            android:alpha="0.5"
            android:clickable="@{mainViewModel.isImport? true : false}"
            android:visibility="@{mainViewModel.isImport ? View.VISIBLE: View.GONE }"
            android:focusable="true"
            android:onClick="@{() -> mainViewModel.onClickTwoBoom()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/fire64x64"
            app:fabSize="mini"/>

    </android.support.constraint.ConstraintLayout>
</layout>